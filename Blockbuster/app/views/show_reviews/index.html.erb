<p id="notice"><%= notice %></p>

<h1>Show Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Show</th>
      <th>User</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_reviews.each do |show_review| %>
      <tr>
        <td><%= show_review.show %></td>
        <td><%= show_review.user %></td>
        <td><%= show_review.review %></td>
        <td><%= link_to 'Show', show_review %></td>
        <td><%= link_to 'Edit', edit_show_review_path(show_review) %></td>
        <td><%= link_to 'Destroy', show_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show Review', new_show_review_path %>
