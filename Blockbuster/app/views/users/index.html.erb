<% if notice %>
<alert class="alert alert-info alert-full" ><%= notice %></alert>
<% end %>

<h1>Usuarios</h1>
<br><br><br>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Rol</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Ver', user, class: "bright" %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: "bright" %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'EstÃ¡s Seguro?' }, class: "bright" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

