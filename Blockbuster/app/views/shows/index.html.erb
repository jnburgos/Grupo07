<% if notice %>
<alert class="alert alert-info alert-full" ><%= notice %></alert>
<% end %>

<% if user_signed_in? && !@searching%>
<h1>Suscripciones</h1>
<section class="grid">
  <% current_user.subscriptions.each do |subscription| %>
    <%= link_to subscription.show, :style => "background-image: url(#{subscription.show.image})" do %>
      <div class="overlay">
        <h4>
          <%= subscription.show.title %> | <%= subscription.show.rating %> &#9733;
          <span><br><%= subscription.show.genre %></span>
        </h4>
      </div>
    <% end %>
  <% end %>
<% end %>

  <span style="display:block;clear:both;"></span>
</section>

<br><br>

