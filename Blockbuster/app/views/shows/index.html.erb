<% if notice %>
<alert class="alert alert-info alert-full" ><%= notice %></alert>
<% end %>

<h1>Suscripciones</h1>

<section class="grid">
  <% current_user.subscriptions.each do |subscription| %>
    <%= link_to "user" do %>
      <h4>
        <%= subscription.show.title %>
        <span><br><%= subscription.show.genre %></span>
      </h4>
    <% end %>
  <% end %>

  <span style="display:block;clear:both;"></span>
</section>

<br><br>

<h1>Todas las Series</h1>

<section class="grid">
  <% @shows.each do |show| %>
    <%= link_to show do %>
      <h4>
        <%= show.title %>
        <span><br><%= show.genre %></span>
      </h4>
    <% end %>
  <% end %>

  <span style="display:block;clear:both;"></span>
</section>




<br><br><br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Rating n</th>
      <th>Permission</th>
      <th>Country</th>
      <th>Language</th>
      <th>Subtitles</th>
      <th>Actors</th>
      <th>Numberofseasons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.title , show %></td>
        <td><%= show.genre %></td>
        <td><%= show.rating %></td>
        <td><%= show.rating_n %></td>
        <td><%= show.permission %></td>
        <td><%= show.country %></td>
        <td><%= show.language %></td>
        <td><%= show.subtitles %></td>
        <td><%= show.actors %></td>
        <td><%= show.numberOfSeasons %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!-- <td><%= link_to 'Agregar a mis series', method: :add_subscription %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

